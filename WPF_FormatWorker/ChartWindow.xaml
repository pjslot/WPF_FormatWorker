<Window x:Class="WPF_FormatWorker.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_FormatWorker"
        xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
xmlns:wfcharting="clr-namespace:System.Windows.Forms.DataVisualization.Charting;assembly=System.Windows.Forms.DataVisualization"
        mc:Ignorable="d"
        Title="Diagram" Height="450" Width="800">
    <Grid Background="#FFC9FFA5">
        <WindowsFormsHost Margin="0,33,0,0">
            <wfcharting:Chart x:Name="chart">
            </wfcharting:Chart>
        </WindowsFormsHost>
        <ComboBox  x:Name="combo" Margin="200,4,0,0" VerticalAlignment="Top" Width="98" SelectionChanged="combo_SelectionChanged" HorizontalAlignment="Left" SelectedIndex="0"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="ru-ru" Text="Выберите тип диаграммы:"/></TextBlock>

    </Grid>
</Window>
